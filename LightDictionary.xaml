    <Style x:Key="xMarkButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="0"
              Background="{TemplateBinding Background}">

                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="#222028"></Setter>
        <Setter Property="Foreground" Value="#d11144"></Setter>
        <Setter Property="BorderBrush" Value="#d11144"></Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#d11144" />
                <Setter Property="Foreground" Value="#fff" />
                <Setter Property="BorderBrush" Value="#d11144" />
                <Setter Property="Cursor" Value="Hand" />
            </Trigger>
            <Trigger Property="IsMouseCaptured" Value="True">
                <Setter Property="Background" Value="#222028" />
                <Setter Property="Foreground" Value="#d11144" />
                <Setter Property="BorderBrush" Value="#d11144" />
            </Trigger>
        </Style.Triggers>
    </Style>
